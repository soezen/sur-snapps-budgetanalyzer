<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:jdbc="http://www.springframework.org/schema/jdbc"
	xsi:schemaLocation="
	    http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- TODO do not use separate profiles but variables -->
    <!-- TODO use jndi -->
    <beans profile="local">

        <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
            <property name="driverClassName" value="org.hsqldb.jdbc.JDBCDriver"/>
            <property name="url" value="jdbc:hsqldb:hsql://localhost/snapps"/>
            <property name="username" value="sa"/>
            <property name="password" value=""/>
        </bean>
    </beans>

    <beans profile="jenkins">
        <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
            <property name="driverClassName" value="com.mysql.jdbc.Driver" />
            <property name="url" value="jdbc:mysql://sur-float:3306/tst_budgetanalyzer" />
            <property name="username" value="tst_budget" />
            <property name="password" value="tst_budget" />
        </bean>
    </beans>
</beans>
